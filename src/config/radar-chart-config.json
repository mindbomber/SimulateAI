  "chartConfig": {
    "layout": {
      "padding": {
        "top": 40,
        "right": 40,
        "bottom": 40,
        "left": 40
      }
    },
    "plugins": {
      "legend": {
        "display": false,
        "position": "top",
        "labels": {
          "font": {
            "size": 14,
            "weight": "500"
          },
          "color": "#2d3748",
          "usePointStyle": true,
          "pointStyle": "circle"
        }
      },
      "title": {
        "display": true,
        "font": {
          "size": 18,
          "weight": "bold"
        },
        "color": "#1a202c",
        "padding": {
          "top": 10,
          "bottom": 20
        }
      },
      "tooltip": {
        "enabled": true,
        "external": null,
        "mode": "nearest",
        "intersect": false,
        "position": "nearest",
        "backgroundColor": "rgba(255, 255, 255, 0.95)",
        "titleColor": "#1a202c",
        "bodyColor": "#2d3748",
        "borderColor": "#4a5568",
        "borderWidth": 2,
        "cornerRadius": 8,
        "displayColors": false,
        "titleFont": {
          "size": 14,
          "weight": "bold"
        },
        "bodyFont": {
          "size": 12
        },
        "padding": 12,
        "caretPadding": 8,
        "caretSize": 6,
        "usePointStyle": false,
        "boxWidth": 0,
        "boxHeight": 0
      }
    },
    "scales": {
      "r": {
        "beginAtZero": true,
        "ticks": {
          "stepSize": 1,
          "backdropColor": "rgba(255, 255, 255, 0.8)",
          "backdropPadding": 4,
          "font": {
            "size": 11,
            "weight": "500"
          },
          "color": "#4a5568"
        },
        "grid": {
          "lineWidth": 2
        },
        "angleLines": {
          "color": "rgba(156, 163, 175, 0.3)",
          "lineWidth": 1.5
        },
        "pointLabels": {
          "display": true,
          "font": {
            "size": 13,
            "weight": "bold",
            "family": "'Segoe UI', Tahoma, Geneva, Verdana, sans-serif"
          },
          "color": "#1a202c",
          "padding": 20,
          "backdropColor": "rgba(255, 255, 255, 0.9)",
          "backdropPadding": {
            "x": 6,
            "y": 3
          },
          "borderRadius": 4
        }
      }
    },
    "dataset": {
      "borderWidth": 3,
      "pointBorderColor": "#ffffff",
      "pointBorderWidth": 1,
      "pointHoverBackgroundColor": "#ffffff",
      "pointRadius": 2,
      "pointHoverRadius": 4,
      "tension": 0.2
    },
    "interaction": {
      "mode": "nearest",
      "intersect": false,
      "includeInvisible": false
    },
    "animation": {
      "duration": 750,
      "easing": "easeInOutQuart",
      "animateRotate": true,
      "animateScale": false
    },
    "responsive": true,
    "maintainAspectRatio": true,
    "devicePixelRatio": 1,
    "elements": {
      "point": {
        "hoverRadius": 6,
        "hitRadius": 8,
        "hoverBorderWidth": 2
      },
      "line": {
        "borderJoinStyle": "round",
        "borderCapStyle": "round"
      }
    },
    "hover": {
      "mode": "nearest",
      "intersect": false,
      "animationDuration": 200
    }
  },
  "accessibility": {
    "ariaLabels": {
      "chart": "Interactive radar chart showing ethical impact across eight dimensions",
      "fallback": "Radar chart fallback showing ethical scores in list format"

{
  "enterprise": {
    "health": {
      "checkInterval": 30000,
      "heartbeatInterval": 60000,
      "memoryThresholdMB": 100,
      "renderTimeThresholdMS": 500,
      "errorThreshold": 5,
      "performanceSampleSize": 20
    },
    "performance": {
      "chartRenderTimeout": 5000,
      "animationFrameBudget": 16,
      "dataUpdateDebounce": 100,
      "interactionTimeout": 30000
    },
    "telemetry": {
      "flushInterval": 45000,
      "batchSize": 50,
      "eventTypes": {
        "chartRender": "chart_render",
        "userInteraction": "user_interaction",
        "dataUpdate": "data_update",
        "performanceMetric": "performance_metric",
        "errorEvent": "error_event"
      }
    },
    "errorRecovery": {
      "maxRetryAttempts": 3,
      "retryDelay": 1000,
      "circuitBreakerThreshold": 5,
      "circuitBreakerTimeout": 60000
    }
  },
  "chart": {
    "defaultSize": 400,
    "animationDuration": 750,
    "mobileBreakpoint": 768,
    "modalLabelMaxLength": 10,
    "scalePercentage": 100

{
  "card": {
    "structure": {
      "container": {
        "element": "article",
        "baseClass": "scenario-card",
        "completedModifier": "completed",
        "dataAttributes": ["data-scenario-id", "data-category-id"]
      },
      "header": {
        "class": "scenario-header",
        "icon": {
          "class": "scenario-icon",
          "styles": {
            "backgroundOpacity": "15",
            "colorProperty": "color"
          }
        },
        "difficulty": {
          "class": "scenario-difficulty",
          "prefixClass": "difficulty-"
        }
      },
      "content": {
        "class": "scenario-content",
        "title": {
          "element": "h4",
          "class": "scenario-title"
        },
        "description": {
          "element": "p",
          "class": "scenario-description"
        }
      },
      "footer": {
        "class": "scenario-footer"
      },
      "completedBadge": {
        "class": "scenario-completed-badge",
        "icon": "âœ“"
      }
    },
    "buttons": {
      "learningLab": {
        "class": "scenario-start-btn",
        "text": "Learning Lab",
        "ariaLabelTemplate": "Learning Lab for {title} scenario",
        "icon": {
          "svg": {
            "width": 16,
            "height": 16,
            "viewBox": "0 0 16 16",
            "fill": "none",
            "path": {
              "d": "M6 4L10 8L6 12",
              "stroke": "currentColor",
              "strokeWidth": 2,
              "strokeLinecap": "round",
              "strokeLinejoin": "round"
            }
          }
        }
      },
      "quickStart": {
        "class": "scenario-quick-start-btn",
        "text": {
          "default": "Start",
          "completed": "Replay"
        },
        "ariaLabelTemplate": "{action} {title} scenario",
        "icon": {
          "svg": {
            "width": 16,
            "height": 16,
            "viewBox": "0 0 16 16",
            "fill": "none",
            "path": {
              "d": "M5 3L12 8L5 13V3Z",
              "stroke": "currentColor",
              "strokeWidth": 2,
              "strokeLinecap": "round",
              "strokeLinejoin": "round"
            }
          }
        }
      }
    },
    "accessibility": {
      "ariaLabelTemplate": "Scenario: {title} - {difficulty} difficulty",
      "focusIndicator": {
        "outline": "2px solid var(--color-primary)",
        "outlineOffset": "2px"
      },
      "screenReader": {
        "skipLinks": true,
        "landmarks": true
      }
    },
    "fallbacks": {
      "category": {
        "color": "#667eea",
        "icon": "ðŸ¤–",
        "id": "default"
      },
      "missingData": {
        "title": "Untitled Scenario",
        "description": "No description available",
        "difficulty": "medium"
      }
    }
  },
  "styles": {
    "spacing": {
      "cardPadding": "var(--spacing-0)",
      "headerPadding": "var(--spacing-5) var(--spacing-5) var(--spacing-3)",
      "contentPadding": "var(--spacing-4)",
      "footerPadding": "var(--spacing-0) var(--spacing-5) var(--spacing-5)"
    },
    "dimensions": {
      "minHeight": "280px",
      "iconSize": "40px",
      "borderRadius": "var(--radius-lg)",
      "borderWidth": "1px"
    },
    "colors": {
      "background": "var(--color-white)",
      "border": "var(--color-gray-200)",
      "completedBorder": "var(--color-green-300)",
      "completedBackground": "var(--color-green-50)"
    },
    "transitions": {
      "all": "all var(--transition-base)",
      "transform": "transform var(--transition-base)",
      "boxShadow": "box-shadow var(--transition-base)"
    },
    "shadows": {
      "default": "var(--shadow-sm)",
      "hover": "var(--shadow-md)",
      "focus": "var(--shadow-lg)"
    }
  },
  "responsive": {
    "mobile": {
      "breakpoint": "768px",
      "modifications": {
        "spacing": {
          "cardPadding": "var(--spacing-4) var(--spacing-6)",
          "headerPadding": "var(--spacing-4)"
        },
        "dimensions": {
          "minHeight": "240px",
          "iconSize": "32px"
        }
      }
    },
    "tablet": {
      "breakpoint": "1024px",
      "modifications": {
        "dimensions": {
          "minHeight": "260px"
        }
      }
    },
    "desktop": {
      "breakpoint": "1200px",
      "modifications": {
        "dimensions": {
          "minHeight": "300px",
          "maxWidth": "380px"
        }
      }
    }
  },
  "themes": {
    "dark": {
      "colors": {
        "background": "var(--color-gray-750)",
        "border": "var(--color-gray-600)",
        "completedBorder": "var(--color-green-600)",
        "completedBackground": "var(--color-green-900)"
      }
    },
    "highContrast": {
      "colors": {
        "border": "#000000",
        "background": "#ffffff"
      },
      "dimensions": {
        "borderWidth": "2px"
      }
    }
  },
  "animations": {
    "hover": {
      "enabled": true,
      "transform": "translateY(-2px)",
      "duration": "var(--transition-base)"
    },
    "focus": {
      "enabled": true,
      "outline": "2px solid var(--color-primary)",
      "outlineOffset": "2px"
    },
    "completed": {
      "enabled": true,
      "animation": "checkmark-bounce 0.6s ease-out"
    },
    "reducedMotion": {
      "disableTransforms": true,
      "disableAnimations": true
    }
  },
  "performance": {
    "lazyLoading": {
      "enabled": true,
      "threshold": "10px"
    },
    "intersection": {
      "enabled": true,
      "rootMargin": "50px"
    }
  },
  "validation": {
    "required": {
      "scenario": ["id", "title", "description", "difficulty"],
      "category": ["id", "color", "icon"]
    },
    "optional": {
      "scenario": ["tags", "estimatedTime", "completionRate"],
      "category": ["name", "description"]
    }
  }
}
